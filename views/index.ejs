<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <title>To Do List</title>
  </head>
  <body>
    <header>
      <h1>TO DO LIST</h1>
      <% if (task == null) { %>
      <h3>Adicione uma tarefa</h1>
      <form action="/create" method="post">
        <input
          type="text"
          name="task"
          id="task"
          placeholder="Insira uma tarefa"
        />
        <button type="submit" id="addButton">Adicionar</button>
      </form>
      <% } else { %>
      <h3>Edite a tarefa</h1>
      <form action="/update/<%= task._id %>" method="post">
        <input
          type="text"
          name="task"
          id="task"
          placeholder="Insira uma tarefa"
          value="<%= task.task %>"
        />
        <button type="submit" id="updateButton">Atualizar</button>
      </form>
      <% } %>
    </header>
    <section id="tasks">
      <ul>
        <% taskList.forEach((task) =>{ %>
          <li>
            <div>
              <a href="/"><%= task.task %> </a>
              <span>Criado em: <%= task.date.toLocaleDateString('pt-br') %></span>
            </div>              
            <div id="">
              <a class="btnUpdate" href="/getById/<%=task._id%>/update"><i class="bi bi-pencil-square"></i></a>
              <a class="btnDelete" href="/getById/<%=task._id%>/delete"><i class="bi bi-trash"></i></a>
            </div>              
          </li>
        <%})%>
      </ul>
    </section>

    <% if (taskDelete != null) { %>
    <section id="modal">
      <div id="card">
        <div id="headModal">
          <h2>Confirmação</h2>
          <a id="btnClose" href="/"><i class="bi bi-x"></i></a>
        </div>      
        <hr>
        <div id="bodyModal">
          <p>Deseja realmente apagar a tarefa: <%= taskDelete.task %>?</p>
        </div>  
        <div id="footerModal">
          <a id="btnNot" href="/">Não</a>
          <a id="btnYes" href="/delete/<%= taskDelete._id %>">Sim</a>
        </div>    
        
      </div>
    </section>
    <% } %>
    
    <script src="script.js"></script>
  </body>
</html>
